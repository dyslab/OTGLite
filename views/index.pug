extends layout

block body-scripts
  script(src="/js/index.js")
  
block body-content
  center
    table(width="80%")
      tr
        td(colspan="2")
          table(width="100%")
            tr
              td(height="50", width="400", valign="top")
                b Page Crawler : OTGLite (TXT/DB Edition) 
              td(align="right", valign="top")
                a(href="/txt") TXT file management
                | &nbsp;&nbsp;&nbsp;•&nbsp;&nbsp;&nbsp;
                a(href="/db") DB management
